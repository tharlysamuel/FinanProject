@model List<Finan.DAL.banco>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="footable table table-striped table-hover toggle-arrow-tiny" data-page-size="10" data-filter=#filter>
        <thead>
            <tr>
                <th data-toggle="true" style="color: #1ab394"> Nome </th>
                <th data-hide="phone" data-sort-ignore="true" style="color: #1ab394">Ação</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td> @item.nome </td>

                    <td>
                        <div class="btn-group">
                            <button class="btn btn-xs btn-default" type="button" onclick="actionEdit(@item.id_banco)" title="Editar" data-toggle="modal" data-target="#modal-edit"><i class=" fa fa-edit"></i> </button>
                            <button class="btn btn-xs btn-default" type="button" title="Excluir" onclick="Delete(@item.id_banco)"> <i class=" fa fa-trash"></i> </button>
                        </div>
                    </td>

                </tr>
            }

        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <ul class="pagination pull-right"></ul>
                </td>
            </tr>
        </tfoot>
    </table>
</div>


